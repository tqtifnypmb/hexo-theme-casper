<section class="share">
    <h4>Share this post</h4>
    <a class="icon-weibo" href="http://service.weibo.com/share/share.php?title=<%- page.title %>&url=<%- permalink %>"
        onclick="window.open(this.href, 'weibo-share', 'width=550,height=235');return false;">
        <span class="hidden">Weibo</span>
    </a>
    <a class="icon-twitter" href="http://twitter.com/share?url=<%- permalink %>"
       onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        <span class="hidden">Twitter</span>
    </a>
    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u=<%- permalink %>"
       onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <span class="hidden">Facebook</span>
    </a>
</section>